---
import BaseLayout from '@/layouts/Baselayout.astro'
interface Props {
  prev_page_link: string;
}
const { prev_page_link } = Astro.props
---
<BaseLayout>
  <a href={prev_page_link} transition:name="back_button" class="btn btn-circle absolute top-4 left-4 "> <div class="i-tabler:arrow-left size-7 " ></div></a>
  <main>
    <slot />
  </main>
</BaseLayout>

